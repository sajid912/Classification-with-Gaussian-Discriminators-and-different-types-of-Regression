def testOLERegression(w,Xtest,ytest):
    # Inputs:
    # w = d x 1
    # Xtest = N x d
    # ytest = X x 1
    # Output:
    # mse
    
    a = ytest-Xtest.dot(w)
    b = w.T.dot(w)
    mse = a.T.dot(a) + b
    # IMPLEMENT THIS METHOD
    return mse

def learnRidgeRegression(X,y,lambd):
    # Inputs:
    # X = N x d                                                               
    # y = N x 1 
    # lambd = ridge parameter (scalar)
    # Output:                                                                  
    # w = d x 1                                                                
    #print "Hello Ridge"
    # IMPLEMENT THIS METHOD  
    C = X.T.dot(X) + lambd*np.eye(X.shape[1])
    w = np.linalg.inv(C).dot(X.T.dot(y))
        
    return w    
    
